@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "Resim Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Güncelleme</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ImageID)

                <div class="form-group">
                    <label for="exampleInputName">Başlık</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName" placeholder="Başlık" asp-for="Title">
                </div>

                <div class="form-group">
                    <label for="exampleInputTitle">Açıklama</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputTitle" placeholder="Açıklama" asp-for="Description">
                </div>

                <div class="form-group">
                    <label for="exampleInputImageUrl">Resim Url</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputImageUrl" placeholder="Resim URL" asp-for="ImageUrl">
                </div>

                <button type="submit" class="btn btn-outline-info">Güncelle</button>
            </form>
        </div>
    </div>
</div>
