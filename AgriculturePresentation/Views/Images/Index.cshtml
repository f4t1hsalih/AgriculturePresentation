@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Galeri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Galeri</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Resim</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ImageID</td>
                                <td>@item.ImageUrl</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Image/EditImage/@item.ImageID" class="btn btn-outline-twitter">Düzenle</a></td>
                                <td><a href="/Image/DeleteImage/@item.ImageID" class="btn btn-outline-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Images/AddImage/" class="btn btn-outline-info">Yeni Resim Girişi</a>
            </div>
        </div>
    </div>
</div>


