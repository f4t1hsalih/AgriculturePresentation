@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Takım Arkadaşlarımız";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Arkadaşlarımız</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Görev</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@item.ImageUrl" alt="image" />
                                </td>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Title</td>
                                <td><a href="/Team/UpdateTeam/@item.ID" class="btn btn-outline-twitter">Düzenle</a></td>
                                <td><a href="/Team/DeleteTeam/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Team/AddTeam/" class="btn btn-outline-info">Yeni Personel Girişi</a>
            </div>
        </div>
    </div>
</div>

