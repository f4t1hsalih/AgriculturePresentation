@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "Personel Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Bilgisi Güncelleme</h4>

            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="ImageUrl" />
                <div class="form-group">
                    <label for="exampleInputName">İsim</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName" placeholder="İsim" asp-for="Name">
                </div>

                <div class="form-group">
                    <label for="exampleInputTitle">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputTitle" placeholder="Görev" asp-for="Title">
                </div>

                <div class="form-group">
                    <label for="exampleInputImageUrl">Resim Url</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputImageUrl" placeholder="Resim URL" asp-for="ImageUrl">
                </div>

                <div class="form-group">
                    <label for="exampleInputFacebookUrl">Facebook Url</label>
                    <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputFacebookUrl" placeholder="Facebook URL" asp-for="FacebookUrl">
                </div>

                <div class="form-group">
                    <label for="exampleInputInstagramUrl">Instagram Url</label>
                    <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputInstagramUrl" placeholder="Instagram Url" asp-for="InstagramUrl">
                </div>

                <div class="form-group">
                    <label for="exampleInputWebSiteUrl">Web Site Url</label>
                    <span asp-validation-for="WebSiteUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputWebSiteUrl" placeholder="Web Site Url" asp-for="WebSiteUrl">
                </div>

                <div class="form-group">
                    <label for="exampleInputTwitterUrl">Twitter Url</label>
                    <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputTwitterUrl" placeholder="Twitter Url" asp-for="TwitterUrl">
                </div>

                <button type="submit" class="btn btn-outline-info">Güncelle</button>
            </form>
        </div>
    </div>
</div>
