@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "Duyuru Düzenleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Düzenleme</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AnnouncementID)
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" placeholder="Başlık" asp-for="Title">
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" placeholder="Açıklama" rows="4" asp-for="Description"></textarea>
                </div>

                <div class="form-group">
                    <label>Tarih</label>
                    <input type="date" class="form-control" placeholder="Tarih" asp-for="Date">
                </div>

                <br />
                <button type="submit" class="btn btn-outline-info">Düzenlemeyi Kaydet</button>
            </form>
        </div>
    </div>
</div>
