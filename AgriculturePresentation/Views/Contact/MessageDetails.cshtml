@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Mesaj Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detay</h4>

            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="ContactID" />
                <div class="form-group">
                    <label for="exampleInput1">Adı Soyadı</label>
                    <input type="text" class="form-control" id="exampleInput1" placeholder="Ad Soyad" asp-for="Name">
                </div>

                <div class="form-group">
                    <label for="exampleInput2">Mail Adresi</label>
                    <input type="email" class="form-control" id="exampleInput2" placeholder="Mail Adresi" asp-for="Mail">
                </div>

                <div class="form-group">
                    <label for="exampleInput3">Tarih</label>
                    <input type="date" class="form-control" id="exampleInput3" placeholder="Tarih" asp-for="Date">
                </div>

                <div class="form-group">
                    <label for="exampleInput4">Mesaj Detayı</label>
                    <textarea asp-for="Message" class="form-control" id="exampleInput4" placeholder="Mesaj Detay" rows="4"></textarea>
                </div>

                <button type="submit" class="btn btn-outline-info">Güncelle</button>
            </form>
        </div>
    </div>
</div>
